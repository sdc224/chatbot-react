{
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "files.eol": "\n",

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
	".eslintcache": true,
	"package-lock.json": true,
	"yarn.lock": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
	"**/*.code-search": true,
	"yarn.lock"
  }
}
